@model List<ResultRoomDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Oda Numarası</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.RoomNumber</td>
            <td>@item.Title</td>
            <td><a href="/Room/DeleteRoom/@item.RoomId" class="btn mb-1 btn-flat btn-outline-danger">Sil</a></td>
            <td><a href="/Room/UpdateRoom/@item.RoomId" class="btn mb-1 btn-flat btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Room/AddRoom/" class="btn btn-primary">Yeni Oda Girişi</a>

